<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintLayout">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="176dp"
            android:layout_height="144dp"
            android:gravity="center"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

        </RelativeLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/home_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Home"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                </androidx.appcompat.widget.AppCompatButton>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                </androidx.appcompat.widget.AppCompatButton>
</androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="press me"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.507"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_count">

                        </androidx.appcompat.widget.AppCompatButton>

                        <ImageView
                            android:id="@+id/image_1"
                            android:layout_width="239dp"
                            android:layout_height="127dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/image_one"
                            app:layout_constraintStart_toEndOf="@+id/image_3"
                            app:layout_constraintTop_toBottomOf="@+id/image_2">

                        </ImageView>


                        <ImageView
                            android:id="@+id/image_2"
                            android:layout_width="117dp"
                            android:layout_height="94dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/image_one"
                            app:layout_constraintStart_toEndOf="@+id/image_4"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>

                        <ImageView
                            android:id="@+id/image_3"
                            android:layout_width="152dp"
                            android:layout_height="232dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/image_one"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>

                        <ImageView
                            android:id="@+id/image_4"
                            android:layout_width="112dp"
                            android:layout_height="95dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/image_one"
                            app:layout_constraintStart_toEndOf="@+id/image_3"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>


                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/name_greeting"
                            android:textColor="@color/black"
                            android:textSize="32dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_1">

                        </TextView>

                        <TextView
                            android:id="@+id/text_count"
                            android:layout_width="105dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="32dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/button_two">

                        </TextView>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/button_color"
                            android:enabled="false"
                            android:text="@string/different_state"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2">

                        </androidx.appcompat.widget.AppCompatButton>


                        <Switch
                            android:id="@+id/button_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:checked="false"
                            android:enabled="true"
                            android:text="enabled"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.498"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/button_one"
                            tools:ignore="UseSwitchCompatOrMaterialXml">

                        </Switch>

                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>